<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    android:padding="8dp">


    <Button
        android:id="@+id/ibb_nxt_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
        android:text="@null"
        app:layout_constraintBottom_toBottomOf="@+id/ibb_indicator2_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ibb_indicator2_iv"
        tools:text="finish" />

    <Button
        android:id="@+id/ibb_skip_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        app:layout_constraintBottom_toBottomOf="@+id/ibb_indicator2_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ibb_indicator2_iv" />

    <ImageView
        android:id="@+id/ibb_indicator0_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_radio_button_checked_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibb_indicator1_iv"
        app:layout_constraintEnd_toStartOf="@+id/ibb_indicator1_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/ibb_skip_btn"
        app:layout_constraintTop_toTopOf="@+id/ibb_indicator1_iv" />

    <ImageView
        android:id="@+id/ibb_indicator1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_radio_button_unchecked_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibb_indicator2_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ibb_indicator0_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ibb_indicator2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_radio_button_unchecked_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibb_indicator1_iv"
        app:layout_constraintEnd_toStartOf="@+id/ibb_nxt_btn"
        app:layout_constraintStart_toEndOf="@+id/ibb_indicator1_iv"
        app:layout_constraintTop_toTopOf="@+id/ibb_indicator1_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>